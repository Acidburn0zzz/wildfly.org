:css

  .hero .row {
    padding-top: 2em;
    padding-bottom: 2em;
  }

  .cta h1 {
    font-size: 96px;
  }

  .cta a:hover {
    text-decoration: none;
  }

  ul li {
    padding-top: 0.5em;
  }

  img {
    padding: 4px;
  }

  ul.features li {
    padding-left: 15px;
  }

  ul.features i {
    color: #e3a835;
  }

  .videos iframe {
    padding-top: 2em;
  }

  .row.find-more {
    padding-bottom: 2em;
    padding-top: 1em;
  }

  .hero {
    color: #e1eef4;
    background-image: url('../images/wf8_bkg.png');
  }

  .cta {
    color: #c5e2c7;
  }

  .hero a {
    color: #c5e2c7;
  }

  .hero h1 {
    font-size: 72px;
  }
  
  h2 {
    color: #4a5d75;
  }

